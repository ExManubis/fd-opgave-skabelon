---
//@ts-nocheck
import servicesData from "@data/services.json";
// console.log(servicesData);
---

<ul class="col-span-2 h-80 grid grid-cols-1 md:grid-cols-3 gap-5 w-full mx-auto lg:w-[80%] p-10 translate-y-[-100px]">
  {
    servicesData.services.map((service) => (
      <li class="text-white col-span-1 p-10 gap-5 bg-neutral-900/80 rounded-xl border border-neutral-700 grid-rows-subgrid z-10"> 
        <div class="backdrop-blur-xxl grid grid-rows-subgrid justify-between">  
        <h2 class="text-lg font-cabin">{service.title}</h2>
          <p class="font-lato text-xs">{service.description}</p>
          <a href="#0" class="bg-neutral-900 text-neutral-50 my-5 w-fit px-6 py-4 rounded-3xl font-lato text-xs font-semibold">{service.buttonText}</a>
        </div>
      </li>
    ))
  }
</ul>